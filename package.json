{
  "name": "@voxpelli/eslint-formatter-summary",
  "version": "2.0.0",
  "description": "ESLint summary formatter aggregating results by rule",
  "author": "Pelle Wessman <pelle@kodfabrik.se> (https://kodfabrik.se/)",
  "contributors": [
    "Marton Hipszki <mhipszki@gmail.com>"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/voxpelli/eslint-formatter-summary.git"
  },
  "bugs": {
    "url": "https://github.com/voxpelli/eslint-formatter-summary/issues"
  },
  "type": "module",
  "exports": "./index.cjs",
  "engines": {
    "node": "^14.18.0 || >=16.0.0"
  },
  "files": [
    "index.cjs",
    "lib/*.js"
  ],
  "scripts": {
    "check:eslint": "eslint --report-unused-disable-directives lib/",
    "check:tsc": "tsc",
    "check": "run-p check:*",
    "prepare": "husky install",
    "test-ci": "run-s test:*",
    "test:jest": "node --experimental-vm-modules node_modules/.bin/jest --coverage",
    "test": "run-s check test:*",
    "try": "eslint -f ./index.cjs"
  },
  "keywords": [
    "eslint",
    "eslint-formatter",
    "summary",
    "formatter",
    "javascript",
    "linting",
    "report"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "node": true,
      "es2021": true,
      "jest": true
    },
    "parserOptions": {
      "ecmaVersion": 10,
      "sourceType": "module"
    },
    "rules": {
      "no-console": 0
    }
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.spec.js"
    ],
    "testPathIgnorePatterns": [
      "node_modules"
    ]
  },
  "dependencies": {
    "chalk": "^4.1.0"
  },
  "devDependencies": {
    "@types/eslint": "^8.4.6",
    "@types/node": "^14.18.26",
    "@voxpelli/tsconfig": "^4.0.0",
    "eslint": "^8.23.0",
    "husky": "^8.0.0",
    "jest": "^26.6.3",
    "npm-run-all2": "^6.0.2",
    "strip-ansi": "^6.0.1",
    "typescript": "~4.6.0"
  }
}
